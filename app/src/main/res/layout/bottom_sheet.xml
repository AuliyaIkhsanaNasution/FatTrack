<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sheet">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/handler"
        android:src="@drawable/baseline_remove_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="@string/title_sheet"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/urbold"
        android:textColor="?attr/font_color"/>

    <TextView
        android:id="@+id/desc_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="@string/dummy_text"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/urmedium"
        android:textColor="?attr/font_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/tv_karbo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_border_inline"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:text="@string/dummy_sheet"
                android:fontFamily="@font/urbold"
                android:textColor="?attr/font_color"/>

            <TextView
                android:id="@+id/karbo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/carbo"
                android:fontFamily="@font/urmedium"
                android:textColor="?attr/font_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/tv_protein"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_border_inline"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:text="@string/dummy_sheet"
                android:fontFamily="@font/urbold"
                android:textColor="?attr/font_color"/>

            <TextView
                android:id="@+id/protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/carbo"
                android:fontFamily="@font/urmedium"
                android:textColor="?attr/font_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/tv_lemak"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_border_inline"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:text="@string/dummy_sheet"
                android:fontFamily="@font/urbold"
                android:textColor="?attr/font_color"/>

            <TextView
                android:id="@+id/lemak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/carbo"
                android:fontFamily="@font/urmedium"
                android:textColor="?attr/font_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_kalori"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_border_inline"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:text="@string/dummy_sheet"
                android:fontFamily="@font/urbold"
                android:textColor="?attr/font_color"/>

            <TextView
                android:id="@+id/kalori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/carbo"
                android:fontFamily="@font/urmedium"
                android:textColor="?attr/font_color"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>