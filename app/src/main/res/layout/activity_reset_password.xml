<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.forgotpassword.ResetPasswordActivity"
    android:background="@color/Primary">

    <!-- LinearLayout untuk menyusun elemen secara vertikal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <!-- TextView untuk judul login -->
        <TextView
            android:id="@+id/title_reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="?attr/font_color"
            android:alpha="0"
            tools:alpha="100"/>

    </LinearLayout>

    <!-- CardView untuk menampilkan teks "Welcome", tetap di bawah -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="40dp"
        android:layout_marginBottom="-25dp"
        android:id="@+id/card_view"
        android:backgroundTint="?attr/cardBackgroundColor">

        <!-- LinearLayout di dalam CardView untuk menempatkan teks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_reset_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"
                android:src="@drawable/logo_fatrack"
                android:alpha="0"
                tools:alpha="100" />

            <TextView
                android:id="@+id/desc_reset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:gravity="center"
                android:textSize="16sp"
                android:alpha="0"
                tools:alpha="100"
                />

            <com.example.fattrack.view.custom.PasswordCustom
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/old_password"
                android:autofillHints="Password"
                android:background="@drawable/rounded_border_inline"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:hint="@string/enter_new_password"
                android:drawableStart="@drawable/ic_password"
                android:textColor="?attr/font_color"
                android:drawablePadding="10dp"
                android:alpha="0"
                tools:alpha="100"/>

            <com.example.fattrack.view.custom.PasswordCustom
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/new_password"
                android:autofillHints="Email"
                android:background="@drawable/rounded_border_inline"
                android:layout_marginTop="30dp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:hint="@string/confirm_password"
                android:drawableStart="@drawable/ic_password"
                android:textColor="?attr/font_color"
                android:drawablePadding="10dp"
                android:alpha="0"
                tools:alpha="100"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_save_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorPrimary"
                android:text="@string/btn_selesai"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:alpha="0"
                tools:alpha="100"/>

            <Button
                android:id="@+id/btn_cancel_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Error"
                android:text="@string/btn_cancel"
                android:textColor="@android:color/white"
                android:layout_marginBottom="30dp"
                android:alpha="0"
                tools:alpha="100"/>
            </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>